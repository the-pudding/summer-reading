#tooltip
  background rgba($bg, 0.5)
  z-index 200
  width 100%
  height 100%
  display flex
  justify-content center
  align-items center
  position fixed
  top 0
  left 0
  opacity 0
  transition opacity 300ms ease-in-out
  pointer-events none
  &.is-active
    opacity 1
    transition opacity 300ms ease-in-out
    .tooltip__close, a
      pointer-events: all
      cursor pointer
  .tooltip__container
    display flex
    justify-content: center
    align-items: center
    position absolute

    .tooltip__close
      height 30px
      width 30px
      background-color: $secondary
      //border: 3px solid $secondary
      align-self flex-end
      transform translate(5px, -275px)
      border-radius 50%
      position relative
      display flex
      align-items: center;
      justify-content: center
      transition 300ms ease
      +mq('bp-3')
        transform translate(685px, -430px)


  .tooltip__contents
    width 670px
    height 450px
    background: $bg
    border 3px solid $secondary
    border-radius 10px
    padding 2rem 2rem
    display flex
    .tooltip__img-desktop
      width auto
    .tooltip__meta
      padding 0 1rem
      font-family $national-narrow
      &-title
        text-transform uppercase
        font-weight bold
        set-type-size('xx-large')
        margin 0
      &-author
        set-type-size('medium')
        margin 0
      &-desc
        set-type-size('small')
      a, .tooltip__library
        set-type-size('small')
