#tooltip
  background rgba($bg, 0.5)
  z-index 200
  width 100%
  height 100%
  display flex
  justify-content center
  align-items center
  position fixed
  top 0
  left 0
  opacity 0
  transition opacity 300ms ease-in-out
  pointer-events none
  &.is-active
    opacity 1
    transition opacity 300ms ease-in-out
    .tooltip__close, a
      pointer-events: all
      cursor pointer
  .tooltip__container
    display flex
    justify-content: center
    align-items: center
    position absolute

    .tooltip__close
      height 30px
      width 30px
      background-color: $white
      //border: 1px solid $secondary
      align-self flex-end
      transform translate(-30px, -275px)
      border-radius 50%
      position relative
      display flex
      align-items: center;
      justify-content: center
      transition 300ms ease
      +mq('bp-3')
        transform translate(714px, -453px)
        z-index 50


  .tooltip__contents
    width 700px
    height 470px
    background: $bg
    border 10px solid $white
    padding 2rem 2rem
    display flex
    background-image url('assets/images/coffee_flatlay.png')
    background-size cover
    position relative
    .tooltip__img-desktop
      width 138px
      clip-path url(#coverClip)
      position absolute
      height 205px
      transform translate(288px, 113px) rotate(-1deg)
      filter saturate(50%)
    .tooltip__meta
      height 200px
      width 185px
      padding 0 1rem
      font-family $shadow
      overflow hidden
      position absolute
      transform translate(6px, 182px)
      color $primary
      &-title
        set-type-size('large')
        margin 0
        line-height 1.2
      &-author
        set-type-size('medium')
        margin 0
      &-desc
        set-type-size('small')
        margin-top 0.5rem
    .tooltip__library
      set-type-size('medium')
      position absolute
      width 90px
      text-align center
      font-family $shadow
      color $primary
      border-bottom none
      transform translate(537px, 321px) rotate(13deg)
      line-height 1.2
