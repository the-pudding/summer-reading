#tooltip
  background rgba($bg, 0.5)
  z-index 200
  width 100%
  height 100%
  display flex
  justify-content center
  align-items center
  position fixed
  top 0
  left 0
  opacity 0
  transition opacity 300ms ease-in-out
  pointer-events none
  &.is-active
    opacity 1
    transition opacity 300ms ease-in-out
    .tooltip__close, a
      pointer-events: all
      cursor pointer
  .tooltip__container
    display flex
    justify-content: center
    align-items: center
    position absolute

    .tooltip__close
      height 30px
      width 30px
      background-color: $white
      //border: 1px solid $secondary
      align-self flex-end
      transform translate(5px, -275px)
      border-radius 50%
      position relative
      display flex
      align-items: center;
      justify-content: center
      transition 300ms ease
      +mq('bp-3')
        transform translate(685px, -430px)


  .tooltip__contents
    width 670px
    height 450px
    background: $bg
    border 10px solid $white
    padding 2rem 2rem
    display flex
    background-image url('assets/images/coffee_flatlay.png')
    background-size cover
    position relative
    .tooltip__img-desktop
      width 131px
      clip-path url(#coverClip)
      position absolute
      height 200px
      transform translate(270px, 104px) rotate(-2deg)
