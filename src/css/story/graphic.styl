#graphic
	position relative
	//transform scale(0.025)
	.book
		position absolute
		top 0
		left 0
		width 10rem
		transform translate(-50%, 0)
		box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25)
		border-radius 2px

		&:before
			display block
			position absolute
			background-image linear-gradient(180deg, rgba(0, 0, 0, 0.2) 0%, rgba(0, 0, 0, 0) 100%);
			height: 30%
			width 100%
			content ''
			top 0
		&:after
			display block
			position absolute
			background-image linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.2) 100%);
			height: 30%
			width 100%
			content ''
			bottom 0



	.book__title
		// display none
		text-align center
