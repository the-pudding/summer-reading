#graphic
	position relative
	overflow hidden
	min-height 1080px
	.book
		position absolute
		top 0
		left 0
		width 10rem
		transform translate(-50%, 0)
		box-shadow 0px 4px 4px rgba(0, 0, 0, 0.25)
		border 1px solid rgba(0,0,0,0.33)
		border-radius 4px
		display flex
		align-items center
		opacity 1
		cursor pointer
		transition transform 250ms ease-out
		&:nth-child(3n+1):hover
			transform translate(-45%, 0)
		&:nth-child(3n+2):hover
			transform translate(-42.5%, 0)
		&:nth-child(3n+3):hover
			transform translate(-47.5%, 0)

		&:before
			display block
			position absolute
			background-image linear-gradient(180deg, rgba(0, 0, 0, 0.2) 0%, rgba(0, 0, 0, 0) 100%);
			height 30%
			width 100%
			content ''
			top 0
		&:after
			display block
			position absolute
			background-image linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.2) 100%);
			height 30%
			width 100%
			content ''
			bottom 0


	.book__flourish
		background-size contain
		padding 1rem 0.5rem
		background-repeat no-repeat
		background-position: center;
		background-origin content-box
		opacity 0.7
		&-0
			order 0
			//background-color red
			width 50px
			height 100%
		&-1
			order 2
			//background-color blue
			width 50px
			height 100%
	.book__title-container
		order 1
		//flex 1
		display flex
		align-items: center;
		height 100%
		&.is-flourished
			border-left 1px solid $primary
			border-right 1px double $primary
	.book__title
		opacity 0
		text-align center
		padding 0 2rem
		margin 0 auto
		display inline-block
		white-space nowrap
		line-height 1.2
		&.is-visible
			opacity 1
		&.is-flourished
			border-top 1px solid $primary
			border-bottom 1px solid $primary

	.graphic__scale
		position absolute
		top 0
		left 50%
		transform translate(-50%, 0)
		width 100%
		height 100%

		.tick
			position absolute
			top 0
			left 0
			width 100%
			border-top 2px dashed darken($bg, 10)
			p
				margin 0
				padding 0.5rem
				set-type-size(x-large, false)
				line-height 1
				text-transform uppercase
				font-family $sans-display
				// font-weight 700
				color darken($bg, 36)
				display inline-block
				transform rotate(90deg) translateY(-100%)
				transform-origin 0 0
				+mq('bp-4')
					transform none
					padding 0.5rem 1rem
					max-width 10rem
