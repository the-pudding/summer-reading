#graphic
	position relative
	overflow hidden
	min-height 1080px
	.book
		position absolute
		top 0
		left 0
		width 10rem
		transform translate(-50%, 0)
		box-shadow 0px 4px 4px rgba(0, 0, 0, 0.25)
		border 1px solid rgba(0,0,0,0.33)
		border-radius 4px
		display flex
		align-items center
		opacity 1
		cursor pointer
		transition transform 250ms ease-out
		&:nth-child(3n+1):hover
			transform translate(-45%, 0)
		&:nth-child(3n+2):hover
			transform translate(-42.5%, 0)
		&:nth-child(3n+3):hover
			transform translate(-47.5%, 0)

		&:before
			display block
			position absolute
			background-image linear-gradient(180deg, rgba(0, 0, 0, 0.2) 0%, rgba(0, 0, 0, 0) 100%);
			height 30%
			width 100%
			content ''
			top 0
		&:after
			display block
			position absolute
			background-image linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.2) 100%);
			height 30%
			width 100%
			content ''
			bottom 0



	.book__title
		opacity 0
		text-align center
		padding 0 2rem
		margin 0 auto
		display inline-block
		white-space nowrap
		line-height 1.2
		&.is-visible
			opacity 1

	.graphic__scale
		position absolute
		top 0
		left 0
		width 100%
		height 100%