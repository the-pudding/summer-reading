.intro
	margin 0 auto
	padding 2rem 1rem 1rem 1rem
	max-width $column-width

	&__divider
		margin 1rem auto
		max-width 20rem
		overflow hidden
		text-align center
		font-family $national-narrow
		text-transform uppercase
		font-size 16px
		font-weight 400
		display flex
		align-items center
		text-align center
		color $primary
		&::before
			margin-right 2rem
		&::after
			margin-left 2rem
		&::before, &::after
			content ''
			flex 1
			border-bottom 1px dashed $primary

	// &__hed
	// 	max-width 60rem
	// 	margin 0 auto
	// 	text-align center

	&__meta
		display flex
		justify-content: space-around;
	&__dek
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center

	&__byline
		max-width $column-width
		margin 0 auto
		margin-top 0.5rem
		text-align center
		set-type-size('medium')
		font-family $national-narrow

	&__time
		display block
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center
		font-family $national-narrow

	.intro__prelude
		font-family $national
		color $primary

//// Ribbon Header
.intro__hed-hipster
	set-type-size('xxx-large')
	text-transform uppercase
	font-weight bold
	color $secondary
	text-align center
	margin 0

.intro__hed-ribbon
	set-type-size('xxx-large')
	width 75%
	position relative
	background $secondary
	color $bg
	text-align center
	padding 0.5rem 2rem
	margin 1rem auto 2rem
	font-family $national-narrow
	text-transform uppercase
	&:before, &:after
		content ''
		position absolute
		display block
		bottom -1rem
		border 1.5rem solid darken($secondary, 6)
		z-index -1
	&:before
		left -2rem
		border-right-width 1.5rem
		border-left-color transparent
	&:after
		right -2rem
		border-left-width 1.5rem
		border-right-color transparent
	.intro__hed-text
		&:before, &:after
			content ''
			position absolute
			display block
			border-style solid
			border-color darken($secondary, 12) transparent transparent transparent
			bottom -1rem
		&:before
			left 0
			border-width 1rem 0 0 1rem
		&:after
			right 0
			border-width 1rem 1rem 0 0
