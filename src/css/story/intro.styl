.intro
	margin 0 auto
	padding 2rem 1rem 3rem 1rem
	max-width $column-width

	&__divider
		margin 1rem auto
		max-width 20rem
		overflow hidden
		text-align center
		font-family $national-narrow
		text-transform uppercase
		font-size 16px
		font-weight 400
		display flex
		align-items center
		text-align center
		color $primary
		&::before
			margin-right 2rem
		&::after
			margin-left 2rem
		&::before, &::after
			content ''
			flex 1
			border-bottom 1px dashed $primary

	&__hed
		max-width 60rem
		margin 0 auto
		text-align center

	&__dek
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center

	&__byline
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center

	&__time
		display block
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center

	.intro__prelude
		font-family $national
		color $primary
