#sidebar
	height 100vh
	width 100%
	max-width 15rem
	position fixed
	top 0
	left 0
	transform translateX(-100%)
	transition transform 400ms ease-in-out
	z-index 50
	background rgba($bg-gray, 0.4)
	box-shadow inset -4px 0px 8px rgba(0, 0, 0, 0.25)
	padding 0.5rem
	&.is-visible
		transform translateX(0)
		transition transform 400ms ease-in-out
	h3
		set-type-size('medium')
		font-family $national-narrow
		color $tertiary
		line-height 24px
		text-align center
		padding 0.5rem
		margin-top 0
