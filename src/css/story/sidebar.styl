#sidebar
	height 100vh
	width 100%
	max-width 15rem
	position fixed
	top 0
	left 0
	transform translateX(-100%)
	transition transform 250ms ease-in-out
	z-index set-index(top)
	padding 1rem
	background-color darken($bg, 5)
	&.is-visible
		transform translateX(0)
	.sidebar__hed
		set-type-size(small, false)
		line-height 1
		font-family $sans-display
		color darken($bg, 60)
		text-align center
		margin 0 auto
		padding-bottom 1rem
		font-weight 600
		max-width 9rem
	.nav__slider
		margin-right 1.5rem
		margin-left 0.5rem
		margin-top 1rem
		margin-bottom 3rem
	h4
		font-family $national-narrow
		set-type-size('medium')
		text-transform uppercase
		margin 0
	button
		font-family $national-narrow
		padding 0.25rem 0.5rem
		border 1px solid darken($bg, 50)
		background lighten($bg, 2)
		set-type-size('small')
		margin 0.25rem 0.25rem 0 0
		transition background 150ms ease-in-out
		color $fg
		&:hover
			background darken($bg, 20)
		&.is-active
			background darken($bg, 20)
			color $bg
