#sidebar
	height 100vh
	width 100%
	max-width 15rem
	position fixed
	top 0
	left 0
	transform translateX(-100%)
	transition transform 500ms ease-in-out
	z-index set-index(top)
	padding 0.5rem
	&.is-visible
		transform translateX(0)
		transition transform 500ms ease-in-out
	.sidebar__hed
		set-type-size(small, false)
		line-height 1
		font-family $sans-display
		color $tertiary
		text-align center
		margin 0 auto
		padding 1rem 0
		font-weight 600
		max-width 9rem
	.nav__slider
		margin-right 1.5rem
		margin-left 0.5rem
		margin-top 1rem
		margin-bottom 3rem
