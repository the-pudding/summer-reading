#minimap
  height 100vh
  width 100%
  max-width 10rem
  position fixed
  top 0
  right 0
  transform translateX(-100%)
  transition transform 400ms ease-in-out
  z-index 50
  background rgba($bg-gray, 0.4)
  box-shadow inset 4px 0px 8px rgba(0, 0, 0, 0.25)
  +mq('bp-6')
    transform translateX(0)
  .minimap__hed
    set-type-size('medium')
    font-family $national-narrow
    color $tertiary
    line-height 24px
    text-align center
    padding 0.5rem
    margin-top 0
  .minimap__container
    position relative
  .book
    position absolute
    transform translate(-50%, 0)
